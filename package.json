{
  "name": "@selenic/webpack-plugin",
  "version": "0.9.0",
  "description": "webpack plugin for selenic",
  "keywords": [
    "license",
    "plugin",
    "webpack"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/mkwtys/selenic-webpack-plugin.git"
  },
  "license": "MIT",
  "author": "mkwtys <mkwtys@gmail.com>",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "!lib/__tests__"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:js && npm run build:types",
    "build:js": "babel src --out-dir lib --extensions \".ts\" --ignore src/**/__tests__/",
    "build:types": "tsc --emitDeclarationOnly",
    "clean": "rimraf lib/",
    "coverage": "vitest --coverage",
    "test": "vitest",
    "test:update": "vitest --update"
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript",
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": 12
          }
        }
      ]
    ]
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true
  },
  "dependencies": {
    "@selenic/core": "^0.11.0",
    "pkg-up": "^5.0.0",
    "webpack-sources": "^3.0.0"
  },
  "devDependencies": {
    "@babel/cli": "7.24.8",
    "@babel/preset-env": "7.25.4",
    "@babel/preset-typescript": "7.24.7",
    "@types/memory-fs": "0.3.7",
    "@types/node": "20.16.1",
    "@types/pkg-up": "3.1.0",
    "@types/terser-webpack-plugin": "3.0.0",
    "@types/webpack": "4.41.39",
    "@types/webpack-sources": "3.2.3",
    "@vitest/coverage-v8": "2.0.5",
    "memory-fs": "0.5.0",
    "rimraf": "6.0.1",
    "terser-webpack-plugin": "3.1.0",
    "typescript": "5.5.4",
    "vitest": "2.0.5",
    "webpack": "4.47.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "changelog": {
    "repo": "mkwtys/selenic-webpack-plugin",
    "cacheDir": ".changelog",
    "labels": {
      "breaking": ":boom: Breaking Change",
      "enhancement": ":rocket: Enhancement",
      "bug": ":bug: Bug Fix",
      "documentation": ":memo: Documentation",
      "dependencies": ":arrow_up: Dependencies",
      "internal": ":house: Internal"
    }
  }
}
