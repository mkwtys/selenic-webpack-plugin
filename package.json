{
  "name": "@selenic/webpack-plugin",
  "version": "0.2.1",
  "description": "webpack plugin for selenic",
  "keywords": [
    "license",
    "plugin",
    "webpack"
  ],
  "license": "MIT",
  "author": "mkwtys <mkwtys@gmail.com>",
  "files": [
    "lib",
    "!lib/__tests__"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "npm run type-check && npm run build:js && npm run build:types",
    "build:js": "babel src/ -d lib/ --extensions \".ts,.js\" --ignore \"**/__tests__/**/**\"",
    "build:types": "tsc --emitDeclarationOnly",
    "test": "jest",
    "test:update": "jest -u",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@selenic/core": "^0.2.1",
    "pkg-up": "^2.0.0",
    "webpack-sources": "^1.3.0"
  },
  "devDependencies": {
    "@babel/cli": "7.2.3",
    "@babel/core": "7.2.2",
    "@babel/preset-env": "7.2.3",
    "@babel/preset-typescript": "7.1.0",
    "@types/jest": "23.3.12",
    "@types/memory-fs": "0.3.2",
    "@types/pkg-up": "2.0.0",
    "@types/webpack": "4.4.22",
    "@types/webpack-sources": "0.1.5",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "23.6.0",
    "babel-loader": "8.0.5",
    "babel-plugin-add-module-exports": "1.0.0",
    "extract-comments": "1.1.0",
    "jest": "23.6.0",
    "memory-fs": "0.4.1",
    "terser-webpack-plugin": "1.2.1",
    "typescript": "3.2.2",
    "webpack": "4.28.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
