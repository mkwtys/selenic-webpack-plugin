{
  "name": "@selenic/webpack-plugin",
  "version": "0.9.0",
  "description": "webpack plugin for selenic",
  "keywords": [
    "license",
    "plugin",
    "webpack"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/mkwtys/selenic-webpack-plugin.git"
  },
  "license": "MIT",
  "author": "mkwtys <mkwtys@gmail.com>",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "!lib/__tests__"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:js && npm run build:types",
    "build:js": "babel src --out-dir lib --extensions \".ts\" --ignore src/**/__tests__/",
    "build:types": "tsc --emitDeclarationOnly",
    "clean": "rimraf lib/",
    "coverage": "jest --coverage",
    "test": "jest",
    "test:update": "jest -u"
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript",
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": 10
          }
        }
      ]
    ]
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.(ts|js)"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "fixtures"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "fixtures"
    ]
  },
  "dependencies": {
    "@selenic/core": "^0.11.0",
    "pkg-up": "^3.1.0",
    "webpack-sources": "^1.4.3"
  },
  "devDependencies": {
    "@babel/cli": "7.10.4",
    "@babel/preset-env": "7.10.4",
    "@babel/preset-typescript": "7.10.4",
    "@types/jest": "26.0.3",
    "@types/memory-fs": "0.3.2",
    "@types/node": "14.0.18",
    "@types/pkg-up": "3.1.0",
    "@types/terser-webpack-plugin": "3.0.0",
    "@types/webpack": "4.41.19",
    "@types/webpack-sources": "1.4.0",
    "jest": "26.1.0",
    "memory-fs": "0.5.0",
    "rimraf": "3.0.2",
    "terser-webpack-plugin": "3.0.6",
    "typescript": "3.9.6",
    "webpack": "4.43.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "changelog": {
    "repo": "mkwtys/selenic-webpack-plugin",
    "cacheDir": ".changelog",
    "labels": {
      "breaking": ":boom: Breaking Change",
      "enhancement": ":rocket: Enhancement",
      "bug": ":bug: Bug Fix",
      "documentation": ":memo: Documentation",
      "dependencies": ":arrow_up: Dependencies",
      "internal": ":house: Internal"
    }
  }
}
